.container-fluid
  .row
    .col-xs-12
      .message-show
        %h1 Message
        %p#notice= notice
        %p
          %b From:
          - @message.sender_id
          =@sender_details.name
        %p
          %b Subject:
          = @message.subject
        %p
          %b Content:
          = @message.content
        - if current_user == @message.sender_id
          = link_to 'reply', new_message_path(:receiver=> @message.sender_id), :class=> 'btn btn-primary btn block'
        = link_to 'Edit', edit_message_path(@message)
        \|
        = link_to 'Back to messages', messages_path
    .col-xs-4
     
