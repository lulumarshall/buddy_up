%div.receiver
  To
  =@receiver_details.name
%div.sender
  From
  =@sender_details.name
  
= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    - f.label :sender_id
    = f.text_field :sender_id, value: @sender_details.id, type: 'hidden'
  .field
    - f.label :receiver_id
    = f.text_field :receiver_id, value: @receiver_details.id, type: 'hidden'
  .field
    - f.label :subject
    = f.text_field :subject, placeholder: 'title'
  .field
    - f.label :content
    = f.text_area :content, placeholder: 'content'
  .actions
    = f.submit 'Send'
