.container-fluid
  .row.sessions-new
    .col-s-2.col-md-4
    .col-xs-12.col-s-8.col-md-4.log_in_box
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true
        .field
          = f.label :name
          %br/
          = f.text_field :name
        .field
          = f.label :image
          %br/
          = f.text_field :image
        .field
          = f.label :password
          - if @validatable
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Sign up"
= link_to "Add your strava account", user_omniauth_authorize_path(:strava)
