.container-fluid
  .row
    .col-xs-1.col-md-3
    .col-xs-10.col-md-6
      %h1 Find Strava Routes
    .col-xs-1.col-md-3
  .row
    .col-xs-1.col-md-3
    .col-xs-10.col-md-6
      %form{:role => "form"}
        .form-group
          %label{:for => "address"} 
          %input#addressInput.form-control{:placeholder => "Address if not using current location", :type => "adress"}
        .form-group
          %label{:for => "ride_distance"}
          %input#distanceInput.form-control{:placeholder => "Distance from start of ride", :type => "ride_distance"}
        %button.btn.btn-primary.strava{:type => "submit"} Find a route
    .col-xs-1.col-md-3
    .col-xs-12.col-md-12
      #map-canvas

=render 'strava_response'